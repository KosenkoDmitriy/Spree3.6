
<% content_for :page_title do %>
  <h1><%= @gallery.title %></h1>
<% end %>

<% content_for :page_actions do %>
     <li><%= button_link_to "Edit details", edit_admin_gallery_photo_url(@gallery, @photo), :icon => 'edit' %></li>
    <li><%= button_link_to "Delete Photo", admin_gallery_photo_url(@gallery, @photo), :method => :delete, :confirm => "Are you sure you want to delete this photo?", :icon => 'delete' %></li>
    <li><%= button_link_to "Back to Gallery", admin_gallery_url(@gallery) %></li>
<% end %>
<br />
<div id="photo_show">
  <%= image_tag @photo.file.url(:large), :class => "large_image" %>
  <p><%= @photo.caption %></p>
</div>