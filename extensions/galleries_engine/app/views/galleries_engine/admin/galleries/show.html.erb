
<% content_for :page_title do %>
  <h1><%= @gallery.title %></h1>
<% end %>

<% content_for :page_actions do %>
  <li><%= button_link_to "Edit details", edit_admin_gallery_url(@gallery), :icon => 'edit' %></li>
  <li><%= button_link_to "Add Photo", new_admin_gallery_photo_url(@gallery), :icon => 'add' %></li>
<% end %>

<ul class="photo_list_admin">
	<% @gallery.photos.each do |photo| %>
	<li>
		<%= link_to image_tag(photo.file.url(:small)), admin_gallery_photo_url(@gallery, photo), :class => "photo" %>
		<%= link_to "Edit", edit_admin_gallery_photo_url(@gallery, photo) %>
		<%= link_to "Delete", admin_gallery_photo_url(@gallery, photo), :method => :delete, :confirm => "Are you sure you want to delete this photo" %>
	</li>
	<% end %>
</ul>
<%= simple_format @gallery.description %>
