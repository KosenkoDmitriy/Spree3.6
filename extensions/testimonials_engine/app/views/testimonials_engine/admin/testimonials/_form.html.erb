<% content_for :page_actions do %>
  <%= button_link_to Spree.t(:back_to_resource_list, resource: plural_resource_name(Testimonial)), admin_testimonials_url, icon: 'arrow-left', class: 'btn-primary' %>
<% end %>

<div class="checkbox">
  <%= label_tag 'testimonial_is_enabled' do %>
    <%= f.check_box :enabled %>
    <%= Spree.t(:enabled?) %>
  <% end %>
</div>

<div class="form-group">
	<%= f.label :name %><br />
	<%= f.text_field :name, size: 100, class: 'form-control' %>
</div>

<div class="form-group">
	<%= f.label :body, "Testimonial" %><br />
	<%= f.text_area :body, cols: 100, rows: 15, class: 'form-control' %>
</div>
