<% content_for :page_title do %>
  <%= Spree.t(:offers) %>
<% end %>

<% content_for :page_actions do %>
  <li>
    <%= button_link_to Spree.t(:new_offer), new_admin_offer_url, :icon => 'icon-plus', :id => 'admin_new_offer' %>
  </li>
<% end %>

<%= paginate @offers %>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Enabled</th>
      <th>Telephone</th>
      <th>Email</th>
      <th>Pics</th>
      <th><!-- Edit --></th>
      <th><!-- Delete --></th>
    </tr>
  </thead>
  <tbody>
    <% @offers.each do |offer| %>
      <tr>
        <td><%= offer.title %></td>
        <td><%= offer.enabled.yesno %></td>
        <td><%= offer.contact_tel %></td>
        <td><%= mail_to offer.contact_email %></td>
        <td><%= offer.offer_images.count %></td>
        <td><%= link_to "Edit", edit_admin_offer_url(offer) %></td>
        <td><%= link_to "Delete", admin_offer_url(offer), :method => :delete, :confirm => "Are you sure you want to delete this offer?" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= paginate @offers %>

