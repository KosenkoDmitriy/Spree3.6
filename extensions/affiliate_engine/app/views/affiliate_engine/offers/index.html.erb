<script src="//maps.google.com/maps/api/js?v=3.23&key=AIzaSyCN_c_ofBxHDOFYwf08PCyAex3FpH76KYc&libraries=geometry&language=&hl=&region="></script>
<script src="//cdn.rawgit.com/mahnunchik/markerclustererplus/master/dist/markerclusterer.min.js"></script>
<script src='//cdn.rawgit.com/printercu/google-maps-utility-library-v3-read-only/master/infobox/src/infobox_packed.js' type='text/javascript'></script>

<div class="column w220">
  <%= render :partial => "base/page_menu" %>
</div>

<div class="column w700">
  <h1><%= title_without_site_name %></h1>
  <p>Here we introduce you to our lovely affiliates, all with special offers when mentioning 'SoulPad'. All of our Affiliates have SoulPads available for use. If you would like to include your business or organisation here, please <a href="/contact">contact SoulPad</a> for further details. We do not charge for this service.
</p>

  <div id=map_container">
    <div id="multi-map"></div>
  </div>

  <div id="offerlist">

    <ul class="offers">

      <% @offers.each do |offer| %>

          <li class="offer">
            <h3 id="offerheader"><a href="<%= offer_path(offer.slug) %>"><%= truncate(offer.title, length:60) %></a></h3>
            <h4 id="offerheader"><%= offer.location %></h4>
            <p id="offerdescr"><%= truncate(offer.description_text, length: 220)%></p>
            <% if offer.image_visible? %>
              <%= image_tag offer.offer_images.first.image.url(:thumb), :alt => offer.title, :id=>"offerimg"%>
            <% end %>
            <a href="<%= offer_path(offer.id) %>"><p id="readmore">More Details</p></a>
          </li>

      <% end %>

    </ul>

  </div>

  <%= paginate @offers %>

  <script>
    handler = Gmaps.build('Google');
    handler.buildMap({ provider: {}, internal: {id: 'multi-map'}}, function(){
      markers = handler.addMarkers(<%=raw @affiliates.to_json %>);
      handler.map.centerOn([52.407632, 0.865639]);
      handler.getMap().setZoom(6);
    });
  </script>

</div>

