<% content_for :page_title do %>
  <%= Spree.t(:faqs_news_and_articles) %>
<% end %>

<% content_for :page_actions do %>
  <%= button_link_to Spree.t(:new), new_admin_post_url, :icon => 'plus', class: 'btn-success', :id => 'admin_new_news' %>
<% end %>

<table class="table">
	<thead>
		<tr>
			<th>Title</th>
			<th>Type</th>
			<th>Published</th>
			<th><!-- unpublish --></th>
			<th><!-- Edit --></th>
			<th><!-- Delete --></th>
		</tr>
	</thead>
	<tbody>
		<% @posts.each do |post| %>
			<tr>
				<td><%= post.title %></td>
				<td><%= post.post_type %></td>
				<td><%= post.published_on.to_s(:default) if post.published? %></td>
				<td><%= link_to "Unpublish", unpublish_admin_post_url(post), class: 'btn btn-sm btn-primary icon icon-delete with-tip', :method => :put if post.published? %></td>
				<td><%= link_to "Edit", edit_admin_post_url(post), class: 'btn btn-sm btn-success icon icon-edit with-tip' %></td>
				<td><%= link_to "Delete", admin_post_url(post), :method => :delete, class: 'btn btn-sm btn-danger icon icon-trash with-tip', :confirm => "Are you sure you want to delete '#{post.title}'" %></td>
			</tr>
		<% end %>
	</tbody>
</table>

<%= paginate @posts %>
