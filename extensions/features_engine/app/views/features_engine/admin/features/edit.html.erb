<% content_for :page_title do %>
Edit Home Page Feature
<% end %>

<%= form_for @feature, :url => admin_feature_url(@feature), :html => {:multipart => true} do |f| %>

	<%= render :partial => "form", :locals => {:f => f} %>

	<div class="form-actions" data-hook="buttons">
		<%= button Spree.t('actions.update'), 'update', 'submit', {class: 'btn-update btn-success', data: { disable_with: "#{ Spree.t(:saving) }..." }} %>
		<span class="or"><%= Spree.t(:or) %></span>
		<%= button_link_to Spree.t('actions.cancel'), admin_features_url, icon: 'remove' %>
	</div>

<% end %>
