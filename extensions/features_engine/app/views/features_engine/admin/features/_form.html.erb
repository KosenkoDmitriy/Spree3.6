<% content_for :page_actions do %>
  <%= button_link_to Spree.t(:back_to_resource_list, resource: plural_resource_name(Feature)), admin_features_url, icon: 'arrow-left', class: 'btn-success' %>
<% end %>

<div class='form-group'>
	<%= f.label :title %>
  <%= f.text_field :title, size: 50, class: 'form-control' %>
	<%= f.error_message_on :title %>
</div>

<div class='form-group'>
	<%= f.label :description %>
	<%= f.text_area :description, {cols: 50, rows: 6, class: 'form-control'} %>
	<%= f.error_message_on :description %>
</div>

<div class='form-group' %>
	<%= f.label :product_id, "Product" %>
	<%= f.select :product_id, [['']] + Spree::Product.available.group(:name, :ASC).collect{|p| [p.name, p.id]}, {}, { class: 'form-control' } %>
</div>

<div class='form-group'>
	<%= f.label :attachment, 'Image' %>
	<%= f.file_field :attachment, class: 'form-control' %>
</div>

<div class="checkbox">
	<%= f.label '' do %>
		<%= f.check_box :enabled %>
		<%= Spree.t(:show_image_on_home_page) %>
	<% end %>
</div>

<div class="radio">
	<%= f.label '' do %>
		<%= f.radio_button :shop_enabled, 'main' %>
		<%= Spree.t(:show_image_on_shop_page_top)%>
	<% end %>
</div>

<div class="radio">
	<%= f.label '' do %>
		<%= f.radio_button :shop_enabled, 'small_left' %>
		<%= Spree.t(:show_image_on_shop_page_small_left) %>
	<% end %>
</div>

<div class="radio">
	<%= f.label '' do %>
		<%= f.radio_button :shop_enabled, 'small_right' %>
		<%= Spree.t(:show_image_on_shop_page_small_right) %>
	<% end %>
</div>

<div class="radio">
	<%= f.label '' do %>
		<%= f.radio_button :shop_enabled, '', default: true %>
		<%= Spree.t(:dont_show_image_on_shop_page) %>
	<% end %>
</div>
