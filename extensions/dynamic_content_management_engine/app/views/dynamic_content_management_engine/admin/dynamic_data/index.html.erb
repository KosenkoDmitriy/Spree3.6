<% content_for :page_title do %>
  <%= Spree.t(:dynamic_data) %>
<% end %>

<% content_for :page_actions do %>
  <%= button_link_to Spree.t(:new, scope: :dynamic_data), new_admin_dynamic_datum_url, class: 'btn-primary', icon: 'plus', id: 'admin_new_dynamic_datum' %>
<% end %>

<table class="table">
	<thead>
		<tr>
			<th>Tag</th>
			<th>Data</th>
			<th><!-- Edit --></th>
			<th><!-- Destroy --></th>
		</tr>
	</thead>
	<tbody>
		<% @dynamic_data.each do |dynamic_datum| %>
			<tr>
				<td><%= dynamic_datum.tag %></td>
				<td><%= raw truncate(dynamic_datum.data, :length => 100, :omission => "...") %></td>
				<td><%= link_to "Edit", edit_admin_dynamic_datum_url(dynamic_datum), :class=>"edit icon_link with-tip icon-edit no-text"  %></td>
				<td><%= link_to "Delete", admin_dynamic_datum_url(dynamic_datum), :class=>"delete-resource icon_link with-tip icon-trash no-text", :method => :delete, :confirm => "Are you sure you want to delete this tag?" %></td>
			</tr>
		<% end %>
	</tbody>
</table>

<%= paginate @dynamic_data %>
