/* First lets set up our base resets ==================================================== */

/* Based upon 'reset.css' in the Yahoo! User Interface Library: http://developer.yahoo.com/yui */
*, html, body, div, dl, dt, dd, ul, ol, li, h1, h2, h3, h4, h5, h6, pre, form, label, fieldset, input, p, blockquote, th, td { margin:0; padding:0 }
table 										{ border-collapse:collapse; border-spacing:0; }
fieldset,
img 											{ border:0;display:block; }
address, caption, cite, code, dfn, em, strong, th, var { font-style:normal; font-weight:normal; }
ol, ul, li { list-style:none; }
caption, th { text-align:left; }
h1, h2, h3, h4, h5, h6 { font-size:100%; font-weight:normal; }
q:before, q:after { content:''}

/* Form resets */
textarea 													{ overflow: auto; }
input[type="radio"] 							{ vertical-align: text-bottom; }
input[type="checkbox"] 						{ vertical-align: middle; }
input[type=button],
input[type=submit],
button 														{ cursor: pointer; }
button,
input,
select,
textarea 													{ margin: 0; }

/* Global reset-RESET */
/* The below restores some sensible defaults */
strong { font-weight:bold; }
em { font-style:italic; }
a img { border:none; } /* Gets rid of IE's blue borders */

/* For clearing any items */
.clear 						{ clear:both;height:1px;margin-top:-1px;width:100%; }

/* Now set up our typography styles ==================================================== */
body 															{ color:#585652;font: 81.3%/1.5 'Droid serif', Georgia, Times, 'Times New Roman', serif; }
select, input, textarea, button 	{ font:99% sans-serif; }
pre, code, kbd, samp 							{ font-family: monospace, sans-serif; }

h1, h2, h3, h4, h5, h6  { font-family:'Droid Sans','Helvetica Neue',Helvetica, arial, sans-serif;font-weight:bold;-webkit-font-smoothing: antialiased; }
h1                      { font-size:2em;letter-spacing:-1px;line-height:1.5;margin-bottom:18px;}
h2                      { font-size:2em;line-height:1.2;margin-bottom:18px;}
h3                      { font-size:1.5em;line-height:1.2;margin-bottom:0.5em;}
h4                      { font-size:1.25em;line-height:1.2;margin-bottom:0.5em;}
h5                      { font-size:1.25em;line-height:1.2;font-weight:bold;margin-bottom:0.5em;}
h6                      { font-size:1.25em;font-weight:bold;margin-bottom:1em;}
p 											{ margin-bottom:1.5em; }
strong                  { font-weight:bold;}
dfn                 { color:#933c68;font-style:normal; }
blockquote              { display:block;font-style:italic;font-size:1.154em; }
blockquote p            { margin-bottom:0; }
blockquote cite         { color:#f47402;font-family:'Droid Sans','Helvetica Neue',Helvetica, arial, sans-serif;font-style:normal;font-size:0.846em;text-transform:uppercase; }
a 											{ margin:0; padding:0; font-size:100%; vertical-align:baseline; background:transparent; }
ins 										{ background-color:#ff9; color:#000; text-decoration:none; }
del 										{ text-decoration: line-through; }
hr 											{ display:block; height:1px; border:0; border-top:1px solid #ccc; margin:1em 0; padding:0; }
input,
select 									{ vertical-align:middle; }
ul, ol                  { margin-left:16px; }
ul li                   { list-style-type:disc;margin-bottom:1em; }
ol li                   { list-style-type:decimal;margin-bottom:1em; }
small										{ color:#999; }

/* Link styles */
a:hover, a:active 			{ outline:none; }
a, a:active, a:visited 	{ color:#f47402;text-decoration:none; }
a:hover 								{ color:#ca6103;text-decoration:underline;-webkit-transition: 0.3s ease;-moz-transition: 0.3s ease; }
a.more									{ font-family:'Droid Sans', 'Helvetica Neue', Helvetica, arial, sans-serif;text-transform:uppercase; }

/* For clearing items */
.clearfix:before,
.clearfix:after 				{ content: "\0020"; display: block; height: 0; visibility: hidden;	 }
.clearfix:after 				{ clear: both; }

/* Form styles */
legend														{ color:#585652;font-family:'Droid Sans', 'Helvetica Neue', Helvetica, arial, sans-serif;font-size:1.154em;font-weight:bold;padding-bottom:18px;padding-left:160px; }
p.required span,
label span												{ color:#f47402; }
p.required												{ text-align:right; }
input[type="text"],
input[type="number"], input[type="tel"],
input[type="password"],
input[type="email"]								{ font-family:'Droid Sans', 'Helvetica Neue', Helvetica, arial, sans-serif;overflow:visible;padding:5px;margin-bottom:18px; }
input[type="submit"] 							{ background-color:#f47402;border:none;color:#fff;cursor:pointer;font-family:'Droid Sans', 'Helvetica Neue', Helvetica, arial, sans-serif;font-size:1.154em;overflow:visible;padding:10px 20px;text-transform:uppercase;vertical-align:middle; }
input[type="submit"]:hover				{ background-color:#ca6103;border:none;color:#fff;text-decoration:none;-webkit-transition: 0.3s ease; }
textarea                    			{ font-size:1.154em;margin-bottom:9px;padding:5px;vertical-align:middle;width:380px; }
select														{ margin:5px 0 18px 0; }
button														{ font-family:'Droid Sans', 'Helvetica Neue', Helvetica, arial, sans-serif;font-size:1.154em; }
/* Error messaging */
span.error                  			{ color:#e77777;font-family:'Droid Sans', 'Helvetica Neue', Helvetica, arial, sans-serif;float:none;display:block;font-size:0.917em;margin:-15px 0 9px 160px; }
input.error												{ background:#fdf3f3;border:1px solid #e77777; }
.flash.errors,
#errorExplanation									{ background:#fdf3f3;border:2px solid #f3d7d7;color:#e77777;font-family:'Droid Sans', 'Helvetica Neue', Helvetica, arial, sans-serif;font-weight:normal;margin-bottom:18px;padding:5px 10px; }
div.flash													{ background: #585652; color: #FFFFFF; margin: 0 10px 1em; padding: 8px 10px;}
div.error	{background-color: #c22;}
#errorExplanation h2 							{ font-size:1.154em;margin-bottom:3px; }
#errorExplanation li							{ margin:0; }
/* Site buttons */
