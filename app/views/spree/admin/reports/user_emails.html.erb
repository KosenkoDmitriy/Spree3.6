<% content_for :page_title do %>
  <%= Spree.t(:user_emails) %>
<% end %>

<% content_for :page_actions do %>
  <%= link_to_with_icon 'arrow-left', Spree.t(:back_to_reports_list), spree.admin_reports_url, :class => 'btn btn-primary' %>
<% end %>

<% content_for :table_filter_title do %>
  <%= Spree.t(:date_range) %>
<% end %>

<% content_for :table_filter do %>
  <%= search_form_for @search, :url => spree.user_emails_admin_reports_path  do |s| %>
    <div class="date-range-filter field align-center">
      <%= label_tag nil, t(:start), :class => 'inline' %>
      <%= s.text_field :created_at_gt, :class => 'datepicker datepicker-from', :value => datepicker_field_value(params[:q][:created_at_gt]) %>

      <span class="range-divider">
          <i class="icon-arrow-right"></i>
        </span>

      <%= s.text_field :created_at_lt, :class => 'datepicker datepicker-to', :value => datepicker_field_value(params[:q][:created_at_lt]) %>
      <%= label_tag nil, t(:end), :class => 'inline' %>
    </div>

    <div class="actions filter-actions">
      <%= button t(:search), 'icon-search'  %>
    </div>
  <% end %>
<% end %>

<table class="table table-bordered admin-report" data-hook="user_emails">
  <thead>
  <tr>
    <th><%= Spree.t(:email) %></th>
    <th><%= Spree.t(:name) %></th>
  </tr>
  </thead>
  <tbody>
    <% @user_data.each do |k, v| %>
      <tr class="align-center">
        <td><%= k[:email] %></td>
        <td><%= k[:firstname] %> <%= k[:lastname] %></td>
      </tr>
    <% end %>
  </tbody>
</table>
