<li id="basket_summary">
	<span class="basket_icon">Your cart: <b><%= pluralize(@basket.line_items.inject(0){ |sum,item| sum + item.quantity }, "item") %><span class="glyphicon glyphicon-triangle-bottom basket_arrow"></span></b></span>

	<div id="cart_dropdown" style="display:none;">
		<ol>
			<% @basket.line_items.each do |line_item| %>
			<li><b><%= line_item.quantity %></b> x <%= line_item.variant.name %><b> <%= number_to_currency line_item.amount %></b></li>
			<% end %>
			<li class="total">
				Total: <b><%= number_to_currency @basket.total %></b>
			</li>
		</ol>
		<%= link_to "View cart »", spree.cart_path, :title => "Proceed to checkout", :class => "cart" %>
		<%= link_to "Checkout »", spree.checkout_path, :title => "Proceed to checkout", :class => "checkout" %>
	</div>
</li>
